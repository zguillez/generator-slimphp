{
  "name": "generator-slimphp",
  "version": "3.1.9",
  "description": "Yeoman generator for backend API development with Slimframework 3 (PHP)",
  "keywords": [
    "yeoman-generator",
    "Slim",
    "Slimframework",
    "Php"
  ],
  "repository": "https://github.com/zguillez/generator-slimphp",
  "license": "MIT",
  "author": {
    "name": "Guillermo de la Iglesia",
    "email": "mail@zguillez.io",
    "url": "https://github.com/zguillez"
  },
  "main": "generators/index.js",
  "files": [
    "generators"
  ],
  "scripts": {
    "clean": "find . -type f -name .DS_Store -exec rm -f {} \\;",
    "version": "bin/version.js",
    "sort": "cd generators/app/templates && sort-package-json package-*.json",
    "pretest": "eslint . --fix",
    "test": "jest",
    "update": "npm run sort && ncu -u && ncu -u --packageFile generators/app/templates/package-3all.json && ncu -u --packageFile generators/app/templates/package-3api.json && ncu -u --packageFile generators/app/templates/package-3web.json && ncu -u --packageFile generators/app/templates/package-4api.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true,
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "xo",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "yeoman-generator": "^4.7.2",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-xo": "^0.29.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "minimist": "^1.2.5",
    "prettier": "^1.19.1",
    "replace": "^1.1.5",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.3.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  }
}
