{
  "name": "generator-slimphp",
  "version": "3.1.1",
  "description": "Yeoman generator for backend API development with Slimframework 3 (PHP)",
  "license": "MIT",
  "main": "generators/index.js",
  "repository": "https://github.com/zguillez/generator-slimphp",
  "author": {
    "name": "Guillermo de la Iglesia",
    "email": "mail@zguillez.io",
    "url": "https://github.com/zguillez"
  },
  "files": [
    "generators"
  ],
  "keywords": [
    "yeoman-generator",
    "Slim",
    "Slimframework",
    "Php"
  ],
  "scripts": {
    "pretest": "eslint . --fix",
    "test": "jest",
    "update": "ncu -u && ncu -u --packageFile generators/app/templates/package-3all.json && ncu -u --packageFile generators/app/templates/package-3api.json && ncu -u --packageFile generators/app/templates/package-3web.json && ncu -u --packageFile generators/app/templates/package-4api.json",
    "prepublishOnly": "yarn audit"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "deep-extend": "^0.6.0",
    "generator-node": "^2.8.0",
    "inquirer-npm-name": "^3.0.0",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.3",
    "superb": "^4.0.0",
    "yeoman-generator": "^4.7.2",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-xo-space": "^0.24.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "prettier": "^1.19.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.3.0"
  },
  "eslintConfig": {
    "extends": [
      "xo-space/esnext",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "templates"
    ]
  }
}
