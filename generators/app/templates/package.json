  "scripts": {
    "prepare-local": "./composer.phar self-update && ./composer.phar install && bin/replace.js",
    "prepare-remote": "yarn run remote -i '/opt/plesk/php/5.6/bin/php composer.phar update'",
    "server": "php-serve --hostname localhost --port 8000 ./index.php",
    "open": "open http://localhost:8000",
    "open-remote": "open {site}",
    "serve": "concurrently 'npm run server' 'npm run open'",
    "deploy": "bin/deploy.js && yarn run open-remote",
    "remote": "bin/remote.js"
  },
  "devDependencies": {
    "colors": "^1.1.2",
    "concurrently": "^3.5.0",
