{
  "name": "slimphp",
  "version": "3.2.0",
  "description": "Backend Web development with Slimframework 3 (PHP)",
  "repository": "",
  "license": "MIT",
  "author": {
    "name": "Guillermo de la Iglesia",
    "email": "mail@zguillez.io",
    "url": "https://github.com/zguillez"
  },
  "main": "index.php",
  "scripts": {
    "clean": "find . -type f -name .DS_Store -exec rm -f {} \\;",
    "deploy": "npm run deploy:ssh && npm run open:remote",
    "deploy:ftp": "bin/deploy --ftp.js",
    "deploy:git": "ssh root@{host} 'cd {path} && git pull origin master'",
    "deploy:inc": "scp -r inc root@{host}:{path}",
    "deploy:lite": "npm run deploy:inc && npm run deploy:static",
    "deploy:scp": "scp -r .htaccess index.php composer.* inc static logs root@{host}:{path}",
    "deploy:ssh": "bin/deploy.js --ssh",
    "deploy:static": "scp -r static/*.* static/images root@{host}:{path}/static",
    "min": "npm run min:js && npm run min:css && npm run min:img",
    "min:css": "node-sass inc/static/styles.scss -o inc/static && cleancss inc/static/styles.css -o static/styles.min.css && rimraf inc/static/styles.css",
    "min:img": "npm run min:img:jpg && npm run min:img:png",
    "min:img:jpg": "imagemin inc/static/images/*.jpg --plugin=mozjpeg -o static/images",
    "min:img:png": "imagemin inc/static/images/*.png --plugin=pngquant -o static/images",
    "min:js": "terser --compress --mangle --toplevel -o static/scripts.min.js -- inc/static/scripts.js",
    "open": "open http://localhost:8000",
    "open:remote": "open {site}",
    "prepare:local": "npm i && ./composer.phar self-update && ./composer.phar install && bin/prepare.js",
    "prepare:remote": "ssh root@{host} 'cd {path} && /usr/bin/php ./composer.phar update'",
    "serve": "concurrently 'npm run open && npm run start'",
    "start": "php -S localhost:8000"
  },
  "devDependencies": {
    "clean-css-cli": "^4.3.0",
    "colors": "^1.4.0",
    "concurrently": "^5.3.0",
    "easy-ftp": "^0.4.1",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^6.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.1",
    "minimist": "^1.2.5",
    "node-sass": "^5.0.0",
    "open-cli": "^6.0.1",
    "replace": "^1.2.0",
    "shelljs": "^0.8.5",
    "terser": "^5.5.1"
  }
}
